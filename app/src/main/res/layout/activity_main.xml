<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="374dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:orientation="horizontal">

            <edu.up.thebeach_landonharrison.DrawingCanvas
                android:id="@+id/drawingview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/currentElement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Element" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TVRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Red level:" />

                <TextView
                    android:id="@+id/TVGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Green level:" />

                <TextView
                    android:id="@+id/TVBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Blue level:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="left">

                <TextView
                    android:id="@+id/TVRedVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pick element" />

                <TextView
                    android:id="@+id/TVGreenVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pick element" />

                <TextView
                    android:id="@+id/TVBlueVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pick element" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/SBRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:min="0"
                    android:max="255"
                    android:progress="210"/>

                <SeekBar
                    android:id="@+id/SBGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:min="0"
                    android:max="255"
                    android:progress="235"/>

                <SeekBar
                    android:id="@+id/SBBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:min="0"
                    android:max="255"
                    android:progress="86"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>